{
  "expo": {
    "name": "Chrono",
    "slug": "Chrono",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shivansh.chrono"
    },
    "android": {
      "package": "com.shivansh.chrono",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.941489768691-la2n0nd4d4g676i7sdrjdnucn0bao9t8"
        }
      ],
      "expo-web-browser",
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "UpcomingEventWidget",
              "label": "Countdown Widget",
              "minWidth": "180dp",
              "minHeight": "110dp",
              "description": "Shows your next upcoming event countdown",
              "previewImage": "./assets/images/widget-preview.png",
              "updatePeriodMillis": 1800000,
              "resizeMode": "horizontal|vertical",
              "widgetFeatures": "reconfigurable"
            }
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "2478ce7b-dee4-44ed-8e13-04c08c5246e3"
      }
    },
    "owner": "shivansh_11",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/2478ce7b-dee4-44ed-8e13-04c08c5246e3"
    }
  }
}